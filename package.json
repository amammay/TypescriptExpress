{
  "author": "Alex Mammay",
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "body-parser": "^1.19.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-joi-validation": "^4.0.2",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "3.2.0",
    "inversify-express-utils": "^6.3.2",
    "lodash": "^4.17.15",
    "morgan": "1.9.1",
    "reflect-metadata": "^0.1.13",
    "swagger-express-ts": "^1.0.1",
    "swagger-ui-dist": "^3.24.2",
    "winston": "^3.2.1"
  },
  "description": "Template for a node express app written in typescript",
  "devDependencies": {
    "@jest-mock/express": "^0.9.0",
    "@types/body-parser": "1.17.0",
    "@types/express": "4.17.0",
    "@types/hapi__joi": "^16.0.3",
    "@types/jest": "^24.0.23",
    "@types/morgan": "^1.7.36",
    "jest": "^24.9.0",
    "newman": "^4.5.6",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "typescript": "3.5.2"
  },
  "keywords": [],
  "license": "ISC",
  "main": "dist/app.js",
  "name": "express_typescript",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "npm-run-all clean lint && tsc --build tsconfig.build.json",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon --inspect './dist/app.js' --watch './dist'",
    "dev": "npm-run-all clean lint build --parallel watch:build watch:server --print-label",
    "ci": "npm-run-all clean lint build test test:it",
    "newman:local": "sleep 10 && newman run postman/TypescriptExpress.postman_collection.json -e postman/typescript-express-local.postman_environment.json",
    "start": "node .",
    "test": "jest --collect-coverage",
    "test:it": "npm-run-all clean build lint --parallel --race start newman:local --print-label",
    "test:watch": "jest --watch"
  },
  "version": "1.0.0"
}
